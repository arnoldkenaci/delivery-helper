{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "main:app", 
                "--host", "0.0.0.0",
                "--port", "8000",
                "--reload"
            ],
            "env": {
                "PYTHONUNBUFFERED": "1"
            }
        }
    ]
}
